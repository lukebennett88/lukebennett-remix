{
  "name": "lukebennett.com.au",
  "description": "Luke Bennettâ€™s personal website",
  "private": true,
  "license": "",
  "sideEffects": false,
  "scripts": {
    "prebuild": "npm run clean",
    "build": "run-s build:*",
    "build:css": "postcss styles/**/*.css --base styles --dir app/styles --env production",
    "build:remix": "remix build",
    "clean": "rimraf ./node_modules/.cache ./build ./public/build \"./app/styles/**/*.css\"",
    "dev": "npm run build:css && pm2-dev pm2.config.js",
    "dev:css": "postcss styles/**/*.css --base styles --dir app/styles --w",
    "dev:remix": "remix dev",
    "dev:vercel": "vercel dev",
    "eslint": "eslint --color --ext .html,.js,.json,.jsx,.md,.ts,.tsx *.* app",
    "eslint:fix": "npm run eslint -- --fix",
    "format": "prettier . --write --ignore-unknown",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write",
    "*.--ignore-unknown": "prettier --write"
  },
  "prettier": {
    "endOfLine": "lf",
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "eslintConfig": {
    "extends": [
      "auto"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/no-floating-promises": 0,
      "@typescript-eslint/no-unsafe-assignment": 0,
      "@typescript-eslint/no-unsafe-call": 0,
      "@typescript-eslint/no-unsafe-member-access": 0,
      "@typescript-eslint/no-unused-vars": 1,
      "@typescript-eslint/no-use-before-define": 0,
      "arrow-body-style": 0,
      "eslint-comments/disable-enable-pair": 0,
      "global-require": 0,
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": false,
          "optionalDependencies": false,
          "peerDependencies": false
        }
      ],
      "import/prefer-default-export": 0,
      "jsx-a11y/no-noninteractive-element-interactions": 0,
      "jsx-a11y/no-noninteractive-tabindex": 0,
      "no-underscore-dangle": 0,
      "no-unused-vars": 1,
      "no-secrets/no-secrets": 0,
      "react/jsx-filename-extension": 0,
      "react/jsx-one-expression-per-line": 0,
      "react/no-array-index-key": 1,
      "react/no-danger": 1,
      "react/no-unescaped-entities": 0,
      "react/no-unused-prop-types": 1,
      "react/prop-types": 0,
      "react/react-in-jsx-scope": 0,
      "react/require-default-props": 0,
      "scanjs-rules/assign_to_src": 0,
      "scanjs-rules/identifier_localStorage": 0,
      "scanjs-rules/property_localStorage": 0,
      "sonarjs/no-duplicate-string": 1,
      "unicorn/no-array-reduce": 0,
      "unicorn/no-new-array": 0,
      "unicorn/no-useless-undefined": 0,
      "unicorn/prefer-module": 0,
      "unicorn/prefer-spread": 0
    },
    "root": true
  },
  "eslintIgnore": [
    "node_modules",
    "build",
    "public/build"
  ],
  "dependencies": {
    "@headlessui/react": "^1.2.0",
    "@heroicons/react": "^1.0.1",
    "@remix-run/react": "^0.17.5",
    "@remix-run/vercel": "^0.17.5",
    "@sanity/client": "^2.11.0",
    "@vercel/node": "^1.11.0",
    "dotenv": "^10.0.0",
    "framer-motion": "^4.1.17",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0",
    "react-portable-text": "^0.3.0",
    "react-router-dom": "^5.2.0",
    "remix": "^0.17.5"
  },
  "devDependencies": {
    "@remix-run/dev": "^0.17.5",
    "@tailwindcss/aspect-ratio": "^0.2.1",
    "@tailwindcss/forms": "^0.3.3",
    "@tailwindcss/line-clamp": "^0.2.1",
    "@tailwindcss/typography": "^0.4.1",
    "@types/node": "^15.12.2",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.7",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "autoprefixer": "^10.2.6",
    "eslint": "^7.28.0",
    "eslint-config-adjunct": "^4.11.1",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-auto": "^0.7.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-array-func": "^3.1.7",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-json": "^3.0.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-markdown": "^2.2.0",
    "eslint-plugin-no-constructor-bind": "^2.0.4",
    "eslint-plugin-no-secrets": "^0.8.9",
    "eslint-plugin-no-unsanitized": "^3.1.5",
    "eslint-plugin-no-use-extend-native": "^0.5.0",
    "eslint-plugin-optimize-regex": "^1.2.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-scanjs-rules": "^0.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sonarjs": "^0.8.0-125",
    "eslint-plugin-switch-case": "^1.1.2",
    "eslint-plugin-unicorn": "^33.0.1",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "pm2": "^5.1.0",
    "postcss": "^8.3.2",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.1.4",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  }
}
